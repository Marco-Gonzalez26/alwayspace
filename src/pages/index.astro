---
import Layout from '../layouts/Layout.astro'
import Card from '../components/Card.astro'
import Astronaut from '../assets/astronaut.svg'
import { getApodImage } from 'scripts/getNasaAPOD'
import ImageLayout from 'layouts/ImageLayout.astro'

const { date, explanation, title, urlImg } = await getApodImage().then(
  (res) => res
)
---

<Layout title='Alwayspace | Watch NASA photos'>
  <main>
    <section>
      <h1>Explore the <span class='text-gradient'>NASA</span> photos!</h1>
      <img src={Astronaut} alt='astronaut' class='astronaut' />
      <div class='nav_bar'>
        <a href='https://api.nasa.gov/' target='_blank' rel='noreferrer'
          >NASA API</a
        >
        <a href='#apod'>Photo of the day</a>
        <a>Astronomical photo of you date of birth</a>
      </div>
    </section>
    <ImageLayout>
      <div class='apod_div'>
        <!-- <Card title={title} body={explanation} date={date} /> -->
        <img src={urlImg} alt={title} />
        <div class='apod_div_content'>
          <h3>{title}</h3>
          <p>{explanation}</p>
        </div>
      </div>
    </ImageLayout>
  </main>
</Layout>

<style>
  main {
    margin: 1rem;
    padding: 1rem;
    max-width: 80rem;
  }

  .apod_div {
    max-width: 32rem;
    border-radius: 0.5rem;
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: flex-end;
  }

  .apod_div:hover .apod_div_content {
    opacity: 1;
  }
  .apod_div:hover {
    box-shadow: -3px -44px 83px 30px rgba(0, 0, 0, 1) inset;
    -webkit-box-shadow: -50px -50px 100px 30px rgba(0, 0, 0, 1) inset;
    -moz-box-shadow: -3px -44px 83px 30px rgba(0, 0, 0, 1) inset;
  }
  .apod_div_content {
    position: absolute;
    color: #fff;
    bottom: 0;
    right: 0;
    left: 0;
    width: 95%;
    backdrop-filter: blur(2px);
    padding: 1rem;

    -webkit-box-shadow: -50px -50px 100px 50px rgba(0, 0, 0, .7) inset;
    transition: 1s ease all;
    opacity: 0;
  }
  @media (min-width: 992px) {
    .apod_div {
      flex-direction: row;
      justify-content: space-between;
      gap: 2rem;
    }
  }
  h1 {
    font-size: 3.5rem;
    font-weight: 800;
    margin: 0;
    color: #fff;
    text-align: center;
  }
  section {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    margin-bottom: 1rem;
  }
  .nav_bar {
    color: #fff;
    justify-content: center;
    align-items: center;
    border-top: solid #fff 1px;
    padding-top: 2rem;
  }
  .nav_bar > a {
    margin-right: 0.75em;
    font-size: 1rem;
    color: #fff;
    text-decoration: none;
  }
  .nav_bar > a:hover {
    color: #999;
    cursor: pointer;
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }

  img {
    width: 100%;
    border-radius: 0.5rem;
  }

  .astronaut {
    animation: floating 3s ease-in-out infinite;
    max-width: 30rem;
    border-radius: 0.5rem;
  }

  @keyframes floating {
    0% {
      transform: translate(0, 0px);
    }
    50% {
      transform: translate(0, 15px);
    }
    100% {
      transform: translate(0, -0px);
    }
  }
  .instructions {
    line-height: 1.6;
    margin: 1rem 0;
    border: 1px solid rgba(var(--accent), 25%);
    background-color: white;
    padding: 1rem;
    border-radius: 0.4rem;
  }
  .instructions code {
    font-size: 0.875em;
    font-weight: bold;
    background: rgba(var(--accent), 12%);
    color: rgb(var(--accent));
    border-radius: 4px;
    padding: 0.3em 0.45em;
  }
  .instructions strong {
    color: rgb(var(--accent));
  }
  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 1rem;
    padding: 0;
  }
</style>
