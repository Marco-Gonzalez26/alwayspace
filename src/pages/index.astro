---
import Layout from '../layouts/Layout.astro'
import Astronaut from '../assets/astronaut.svg'
import Card from '@components/Card.astro'
import ApodLayout from 'layouts/ApodLayout.astro'

import { getApodImage } from 'scripts/getNasaAPOD'
import { ApodDayOfBirth } from '../components/ApodOfBirthday.jsx'

const { date, explanation, title, urlImg, author } = await getApodImage().then(
  (res) => res
)
---

<Layout title='Alwayspace | Watch NASA photos'>
  <main>
    <section class='main_container'>
      <h1>Explore the <span class='text-gradient'>NASA</span> photos!</h1>
      <img src={Astronaut} alt='astronaut' class='astronaut' />
      <div class='nav_bar'>
        <a href='https://api.nasa.gov/' target='_blank' rel='noreferrer'
          >NASA API</a
        >
        <a href='#apod'>Photo of the day</a>
        <a href='#apod-of-birth'>Astronomical photo of you date of birth</a>
      </div>
    </section>
    <ApodLayout>
      <a
        href='https://apod.nasa.gov/apod/'
        class='apod_div'
        target='_blank'
        rel='noreferrer'>
        <img src={urlImg} alt={title} />
        <div class='apod_div_content'>
          <h3>{title}</h3>
          <h4>{author}</h4>
          <small>{date}</small>
          <p>{explanation.substring(0, 300)}...</p>
        </div>
      </a>
      <div class='apod_div_mobile'>
        <Card
          title={title}
          author={author}
          date={date}
          body={explanation}
          href='https://apod.nasa.gov/apod/'
        />
      </div>
    </ApodLayout>
    <section class='apod-of-birth_container'>
      <ApodDayOfBirth client:load />
    </section>
  </main>
</Layout>

<style>
  main {
    margin: 1rem;
    padding: 1rem;
    max-width: 80rem;
    min-height: 100vh;
  }

  .apod_div {
    max-width: 40rem;
    border-radius: 0.5rem;
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: flex-end;
  }

  .apod_div:hover .apod_div_content {
    opacity: 1;
  }
  .apod_div:hover {
    box-shadow: -3px -44px 83px 30px rgba(0, 0, 0, 1) inset;
    -webkit-box-shadow: -50px -50px 100px 30px rgba(0, 0, 0, 1) inset;
    -moz-box-shadow: -3px -44px 83px 30px rgba(0, 0, 0, 1) inset;
  }
  .apod_div_content {
    position: absolute;
    color: #fff;
    bottom: 0;
    right: 0;
    left: 0;
    width: 95%;
    backdrop-filter: blur(4px);
    padding: 1rem;

    -webkit-box-shadow: -50px -50px 100px 50px rgba(0, 0, 0, 0.7) inset;
    transition: 1s ease all;
    opacity: 0;
    display: none;
  }

  .apod-of-birth_container {
    min-height: 100vh;
    max-height: 135vh;
  }
  h1 {
    font-size: 2rem;
    font-weight: 800;
    margin: 0;
    color: #fff;
    text-align: center;
  }

  @media (min-width: 992px) {
    h1 {
      font-size: 3.5rem;
    }
    .main_container {
      min-height: 100vh;
    }
    .apod-of-birth_container {
      min-height: 100vh;
    }

    .apod_div_content {
      display: block
    }

    .apod_div_mobile {
      display: none
    }
  }

  .main_container {
    height: 80vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    margin-bottom: 1rem;
  }
  .nav_bar {
    color: #fff;
    justify-content: center;
    align-items: center;
    border-top: solid #fff 1px;
    padding-top: 1rem;
    text-align: center;
  }
  .nav_bar > a {
    margin-right: 0.75em;
    font-size: 1rem;
    color: #fff;
    text-decoration: none;
  }
  .nav_bar > a:hover {
    color: #999;
    cursor: pointer;
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }

  img {
    width: 100%;
    border-radius: 0.5rem;
  }

  .astronaut {
    animation: floating 3s ease-in-out infinite;
    max-width: 25rem;
    border-radius: 0.5rem;
  }

  @keyframes floating {
    0% {
      transform: translate(0, 0px);
    }
    50% {
      transform: translate(0, 15px);
    }
    100% {
      transform: translate(0, -0px);
    }
  }
</style>
